<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="40dp"

        android:layout_marginLeft="40dp"
        android:textAlignment="center"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:alpha="30"

        android:hint="Email ID" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/pass"

        android:layout_below="@+id/username"
        android:textAlignment="center"

        android:layout_marginTop="10dp"
        android:alpha="30"

        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="Password" />

    <Button
        android:id="@+id/logi"
        style="@style/Base.V23.Theme.AppCompat"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/pass"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#05719B"

        android:text="Login"
        android:visibility="visible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logi"
        android:layout_marginTop="30dp"
        android:textSize="18dp"
        android:fontFamily="cursive"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/forgot"
        android:text="Forgot Password?"
        android:textColor="#f91f1f"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forgot"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/registe"
        android:textColor="#0fe63d"
        android:text="Not a member yet? Register now!"
        android:textStyle="bold"/>

    <ProgressBar

        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/pass"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pgsbar"
        android:visibility="gone"
        android:indeterminateTint="#FFE64A10" />

</RelativeLayout>